<h1><%= @book.title %> </h1>

<%= form_for @book, url: update_book_path(@book.id) do |f| %>
  <%= f.text_field :title %>
  <%= f.submit %>
  <% end %>

<%= form_tag delete_book_path(id: @book.id), method: :delete do %>
<%= submit_tag "Remove"%>
<% end %>
  <%= link_to "Back to homepage", books_path %>
  <%= link_to "Back to #{@book.title}", book_path(id: @book.id) %>
